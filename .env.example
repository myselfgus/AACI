# Example environment configuration for AACI

# Model Configuration
MODEL_NAME=openai/whisper-large-v3
LANGUAGE=pt
TASK=transcribe
DEVICE=cuda
COMPUTE_TYPE=float16

# Training Configuration
OUTPUT_DIR=./checkpoints
NUM_EPOCHS=10
BATCH_SIZE=4
LEARNING_RATE=1e-5

# Data Configuration
TRAIN_DATA=./data/train
EVAL_DATA=./data/eval
TEST_DATA=./data/test

# Worker Configuration
HOST=0.0.0.0
PORT=8000
NUM_WORKERS=4

# Optional: Hugging Face Hub
# HF_TOKEN=your_token_here
# PUSH_TO_HUB=false
